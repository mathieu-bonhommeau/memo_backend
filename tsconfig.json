{
    "compilerOptions": {
        "outDir": "./build/",
        "baseUrl": ".",
        "rootDir": ".",
        "sourceMap": true,
        "noImplicitAny": false,
        "target": "es5",
        "downlevelIteration": true,
        "allowJs": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "skipLibCheck": true,
        "strictPropertyInitialization": false,
    },
    "include": ["src/**/*"],
    "exclude": ["test/**/*"]
}

